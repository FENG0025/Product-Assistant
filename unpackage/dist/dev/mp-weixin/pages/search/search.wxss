.check {
  background-color: #f0ffff;
}
.text {
  font-size: 15px;
  color: #55557f;
  margin-top: 0px;
}
.uni-px-5 {
  padding-left: 10px;
  padding-right: 10px;
}
.uni-pb-5 {
  padding-bottom: 10px;
}
.parameters_input {
  height: 20px;
}
.range {
  background-color: #f0ffff;
}
.input_range {
  flex: 1;
  max-width: 45%;
  height: 100%;
  background-color: #F7F7F7;
  border-radius: 40rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 24rpx;
}
.text_range {
  color: #999;
}
.choose_range {
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}
.goods-list .product-list {
  background-color: azure;
  width: 90%;
  padding: 5vw 5% 100% 5%;
  /* 点击到"消解仪"标签时的padding */
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.goods-list .product-list .product {
  width: 48%;
  border-radius: 30rpx;
  background-color: white;
  margin: 0 0 45rpx 0;
  box-shadow: 0rpx 50rpx 25rpx rgba(0, 0, 0, 0.1);
}
.goods-list .product-list .product image {
  padding: 5px;
  width: 300rpx;
  height: 300rpx;
}
.goods-list .product-list .product .name {
  width: 90%;
  padding: 5rpx 4% 10rpx 5%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 3em;
  font-size: 28rpx;
  font-family: 苹方;
  line-height: 40rpx;
  color: #000000;
}
.goods-list .product-list .product .info {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  width: 92%;
  padding: 8rpx 4% 10rpx 4%;
}
.goods-list .product-list .product .info .price {
  font-size: 30rpx;
  font-family: MiSans;
  line-height: 30rpx;
  color: #d43030;
}