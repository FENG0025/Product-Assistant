.swiper-container {
  height: 85vw;
  margin-bottom: 5px;
  margin-top: 5px;
}
.info-box {
  width: 92%;
  padding: 20rpx 4%;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.goods-info .price {
  font-size: 46rpx;
  font-weight: 600;
  color: #f47925;
}
.goods-info .title {
  font-size: 30rpx;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  /* 设置为顶部对齐 */
  height: 100vh;
}
.table-container {
  width: 90%;
  border: 1px solid #1e1e1e;
  border-collapse: collapse;
  margin-top: 20px;
}
.table-row {
  display: flex;
  flex-direction: row;
}
.table-header {
  font-weight: bold;
}
.table-cell {
  flex: 1;
  padding: 6px 4px;
  text-align: center;
  border: 1rpx solid #1e1e1e;
}
.highlighted {
  background-color: #55ffff;
}